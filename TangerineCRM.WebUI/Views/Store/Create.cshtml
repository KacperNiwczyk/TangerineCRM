@model TangerineCRM.WebUI.Models.StoreViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/login")
@Styles.Render("~/Content/dropdown")

<h2>Create</h2>
<body>
    <div class="wrapper fadeInDown" style="align-items: flex-start">
        <div id="formContent">
            @using (Html.BeginForm("Add", "Store", FormMethod.Post))
            {
                @Html.TextBoxFor(x => x.SingleStore.StoreName, new { @class = "fadeIn second", @name = "Nazwa", @placeholder = "Nazwa" });
                //@Html.ValidationMessageFor();
                @Html.TextBoxFor(x => x.SingleStore.City, new { @class = "fadeIn second", @name = "Miasto", @placeholder = "Miasto" });

                @Html.TextBoxFor(x => x.SingleStore.Street, new { @class = "fadeIn second", @name = "Ulica", @placeholder = "Ulica" });

                @Html.TextBoxFor(x => x.SingleStore.Postcode, new { @class = "fadeIn second", @name = "Kod pocztowy", @placeholder = "Kod pocztowy" });

                @Html.TextBoxFor(x => x.SingleStore.Telephone, new { @class = "fadeIn second", @name = "Telefon", @placeholder = "Telefon" });

                //@Html.ValidationMessageFor();
                <br />
                <div class="field fadeIn second">
                    <label> Właściciel </label>
                    <br />
                    @Html.DropDownListFor(x => x.SelectedContractor, Model.ContractorSelectList)
                </div>

                <input type="submit" class="fadeIn fourth" value="Dodaj">
            }
            <!-- Remind Passowrd -->
        </div>
    </div>
</body>